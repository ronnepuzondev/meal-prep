<%- include('../partials/header') %>
<body>
<%- include('../partials/navbar') %>

<h2>Enter a New Meal</h2>
<form id="new-form" action="/meals" method="POST">
  <label>Date:</label>
  <input type="datetime-local" name="dateOfMeal" required>
  <label>Breakfast:</label>
  <input type="text" name="breakfast">
  <label>Lunch:</label>
  <input type="text" name="lunch">
  <label>Dinner:</label>
  <input type="text" name="dinner">
  <label>Snack:</label>
  <input type="text" name="snack">
  <input type="submit" value="Add Daily Meal">
</form>

</body>